{
    "name": "portfolio_site",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npx tailwindcss -i ./styles.css -o ./public/css/styles.css",
        "watch": "npx tailwindcss -i ./styles.css -o ./public/css/styles.css --watch",
        "dev": "concurrently \"nodemon .\" \"npm run watch\"",
        "start": "npm run build && node .",
        "deploy": "npm run build && node deploy.js",
        "pages": "npm run deploy && git checkout -b gh-pages && git add . && git commit -m \"deploy\" && git subtree split --prefix dist -b temp-gh-pages && git push --force origin temp-gh-pages:gh-pages && git branch -D temp-gh-pages && git checkout main && git branch -D gh-pages"
    },
    "author": "Elliot Topper",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "flowbite": "^1.4.7",
        "morgan": "^1.10.0",
        "node-github-pages": "^0.1.1",
        "nodemon": "^2.0.19",
        "tailwind-scrollbar": "github:adoxography/tailwind-scrollbar#pull/36/head",
        "tailwindcss": "^3.1.5"
    },
    "devDependencies": {
        "concurrently": "^7.2.2"
    }
}

